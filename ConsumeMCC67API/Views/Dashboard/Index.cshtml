@{
Layout = "_LayoutDashboard";
ViewData["Title"] = "Dashboard";
}
<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
          <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
              <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
              <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
            </ol>
          </nav>
        </div>
      </div>
      <!-- Card stats -->
      <div class="row">
        @if(User.IsInRole("Manager"))
        {
        <div class="col-xl-6 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col" id="totalProduct">
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                    <i class="ni ni-app"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-nowrap">Total Product</span>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xl-6 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col" id="totalSupplier">

                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
                    <i class="ni ni-shop"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-nowrap">Total Supplier</span>
              </p>
            </div>
          </div>
        </div>
        }
        @if(User.IsInRole("Staff"))
        {
        <div class="col-xl-6 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col" id="totalSupplier">

                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
                    <i class="ni ni-shop"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-nowrap">Total Supplier</span>
              </p>
            </div>
          </div>
        </div>
        }

      </div>
    </div>
  </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
  <div class="row">
    @if (User.IsInRole("Manager"))
    {
    <div class="col-xl-6">
      <div class="card">
        <div class="card-header bg-transparent">
          <div class="row align-items-center">
            <div class="col">
              <h6 class="text-uppercase text-muted ls-1 mb-1">Pie Chart</h6>
              <h5 class="h3 mb-0">Total Product Per Supplier</h5>
            </div>
            <div class="col">
              <ul class="nav nav-pills justify-content-end">
                <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                  <i class="ni ni-chart-pie-35"></i>
                </div>
              </ul>
            </div>
          </div>
        </div>
        <div class="card-body">
          <!-- Chart -->
          <div class="chart">
            <canvas id="myChart" style="width: 577px; height: 300px;"></canvas>
          </div>
          <a id="downloadPieChart" download="PieChartImage.jpg" href=""
            class="btn btn-primary float-right bg-flat-color-1">

            <!-- Download Icon -->
            <i class="fa fa-download"></i>
          </a>
        </div>
      </div>
    </div>
    <div class="col-xl-6">
      <div class="card">
        <div class="card-header bg-transparent">
          <div class="row align-items-center">
            <div class="col">
              <h6 class="text-uppercase text-muted ls-1 mb-1">Bar Chart</h6>
              <h5 class="h3 mb-0">Total Product Per Supplier</h5>
            </div>
            <div class="col">
              <ul class="nav nav-pills justify-content-end">
                <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                  <i class="ni ni-chart-bar-32"></i>
                </div>
              </ul>
            </div>
          </div>
        </div>
        <div class="card-body">
          <!-- Chart -->
          <div class="chart">
            <!-- Chart wrapper -->
            <canvas id="barChart" class="chart-canvas"></canvas>
          </div>
          <a id="downloadBarChart" download="BarChartImage.jpg" href=""
            class="btn btn-primary float-right bg-flat-color-1">

            <!-- Download Icon -->
            <i class="fa fa-download"></i>
          </a>
        </div>
      </div>
    </div>
    }
  </div>
</div>

@section Scripts{
@if (User.IsInRole("Manager"))
{
<script src="~/js/dashboardManager.js"></script>
}
@if (User.IsInRole("Staff"))
{
<script src="~/js/dashboardStaff.js"></script>
}
}