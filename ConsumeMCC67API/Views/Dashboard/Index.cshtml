@{
Layout = "_LayoutDashboard";
ViewData["Title"] = "Dashboard";
}



<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header font-weight-bold">
          Supplier List and Count Pie Chart Based on Product
        </div>
        <div class="card-body">
          <div class="chart-container">
            <canvas id="myChart" style="width: 577px; height: 300px;"></canvas>
          </div>
          <a id="downloadPieChart" download="PieChartImage.jpg" href=""
            class="btn btn-primary float-right bg-flat-color-1">

            <!-- Download Icon -->
            <i class="fa fa-download"></i>
          </a>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-header font-weight-bold">
          Supplier List and Count Bar Chart Based on Product
        </div>
        <div class="card-body">
          <canvas id="barChart"></canvas>
          <a id="downloadBarChart" download="BarChartImage.jpg" href=""
            class="btn btn-primary float-right bg-flat-color-1">

            <!-- Download Icon -->
            <i class="fa fa-download"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts{
  <script src="~/js/dashboard.js"></script>
}