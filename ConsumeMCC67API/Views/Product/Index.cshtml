@model IEnumerable<ConsumeMCC67API.Models.Product>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Supplier Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.Id)</td>
                <td>@Html.DisplayFor(model => item.Name)</td>
                <td>@Html.DisplayFor(model => item.Supplier.Name)</td>
                <td>
                    <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Edit">Edit</a>
                    <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="Create" asp-controller="Product">Add Product</a>