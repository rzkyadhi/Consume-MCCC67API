@model IEnumerable<ConsumeMCC67API.Models.Supplier>
@{
Layout = "_LayoutDashboard";
ViewData["Title"] = "Supplier";
}

<table class="table table-bordered table-hover">
	<thead class="text-center">
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Supplier Name</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="text-center">
				<td>@Html.DisplayFor(model => item.Id)</td>
				<td>@Html.DisplayFor(model => item.Name)</td>
				<td>
					<a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Edit">Edit</a>
					<a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<a class="btn btn-primary" asp-action="Create" asp-controller="Supplier">Add Supplier</a>